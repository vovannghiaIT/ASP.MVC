                                <input type="radio" name="myfilter_radio" class="custom-control-input">
                                <div class="custom-control-label">Used items</div>
                            </label>

                            <label class="custom-control custom-radio">
                                <input type="radio" name="myfilter_radio" class="custom-control-input">
                                <div class="custom-control-label">Very old</div>
                            </label>
                        </div>--> <!-- inner.// -->
                    <!--</div>
                </article>--> <!-- filter-group .// -->

            </aside> <!-- col.// -->
            <main class="col-md-10">


                <header class="mb-3">
                    <div class="form-inline">


                        <div class="btn-group">
                            @foreach (var item in Model.ListCategory.Take(1))
                            {
                                @*@Url.Action("Product_Category", "Category", new { Id = item.Id })*@
                                <a href="@Url.Action("Product_Category", "Category", new { Id = item.Id })" class="btn btn-light active">
                                    <i class="fa fa-bars"></i>
                                </a>
                                <a href="@Url.Action("Product_grid", "Category", new { Id = item.Id })" class="btn btn-light ">
                                    <i class="fa fa-th"></i>
                                </a>


                            }
                        </div>
                    </div>
                </header><!-- sect-heading -->

                @foreach (var item in Model.ListProduct)
                {
                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="img-wrap">
                                    <span class="badge badge-danger"> Mới </span>
                                    <img src="~/Content/images/items/@item.Avatar">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-6">
                                <div class="info-main">
                                    <a href="@Url.Action("Detail","Product",new { Id = item.Id })" class="h5 title"> @item.Name</a>
                                    <div class="rating-wrap mb-2">
                                        <ul class="rating-stars">
                                            <li style="width:100%" class="stars-active">
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                            <li>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        </ul>
                                        <div class="label-rating">9/10</div>
                                    </div> <!-- rating-wrap.// -->



                                    <p>
                                        @item.ShortDes
                                    </p>

                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->

                    </article> <!-- card-product .// -->


                }



                <nav class="mb-4" aria-label="Page navigation sample">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Trang</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        @*<li class="page-item"><a class="page-link" href="#">Next</a></li>*@
                    </ul>
                </nav>


                @*<div class="box text-center">
                    <p>Did you find what you were looking for？</p>
                    <a href="" class="btn btn-light">Yes</a>
                    <a href="" class="btn btn-light">No</a>
                </div>*@


            </main> <!-- col.// -->

        </div>

    </div> <!-- container .//  -->
</section>
