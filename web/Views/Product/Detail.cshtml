@model web.Context.Product
@{
    ViewBag.Title = "Detail";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    $(function () {
        $("#addtocart").click(function () {
            var model = {};
            //lấy id sản phẩm
            model.Id = @Model.Id;
            // lấy số lượng đặt hàng
            model.Quantity = $("#ipQuantity").val();
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddToCart", "Cart")',
                data:  JSON.stringify(model) ,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    toastr["success"]("Thêm giỏ hàng thành công")
                    $('#CartCount').text(@Session["count"] + 1);
                },
                error: function () {
                    toastr["error"]("Thêm giỏ hàng thất bại")
                }
            });
            return false;
        });
    });
    function cong() {
        //lấy giá trị box
        var t = document.getElementById("ipQuantity").value;

        //cộng thêm 1
        document.getElementById("ipQuantity").value = parseInt(t) + 1;
    }
    function tru() {
        //lấy giá trị box
        var t = document.getElementById("ipQuantity").value;
        if (parseInt(t) > 1)//để không bị âm
        {
            //cộng thêm 1
            document.getElementById("ipQuantity").value = parseInt(t) - 1;
        }

    }
</script>

